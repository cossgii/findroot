{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "types": ["cypress", "node"],
    "noEmit": true,
    "baseUrl": "..",
    "paths": {
      "@/*": ["./src/*"],
      "~/*": ["./*"]
    },
    "skipLibCheck": true,
    "isolatedModules": false
  },
  "include": ["**/*.ts", "**/*.tsx", "../src/**/*.ts", "../src/**/*.tsx"],
  "exclude": ["node_modules"]
}
